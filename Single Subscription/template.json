{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "actionGroupName": {
      "type": "string",
      "defaultValue": "serviceHealthActionGroup",
      "minLength": 1,
      "metadata": {
        "description": "Name for the Action group."
      }
    },
    "actionGroupShortName": {
      "type": "string",
      "defaultValue": "Action Group Name",
      "minLength": 1,
      "maxLength": 12,
      "metadata": {
        "description": "Short name for the Action group."
      }
    },
    "emailAddress": {
      "type": "string",
      "metadata": {
        "description": "Email address."
      }
    },
    "alertRuleName": {
      "type": "string",
      "defaultValue": "serviceHealthAlert",
      "minLength": 1,
      "metadata": {
        "description": "Name for the Alert Rule."
      }
    },
    "eventType": {
    "type": "string",
    "defaultValue": "Incident",
    "allowedValues": [
      "Incident",
      "Maintenance"
    ]
  }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/actionGroups",
      "apiVersion": "2019-06-01",
      "name": "[parameters('actionGroupName')]",
      "location": "Global",
      "properties": {
        "groupShortName": "[parameters('actionGroupShortName')]",
        "enabled": true,
        "emailReceivers": [
          {
            "name": "emailReceiver",
            "emailAddress": "[parameters('emailAddress')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/activityLogAlerts",
      "apiVersion": "2017-04-01",
      "name": "[parameters('alertRuleName')]",
      "location": "Global",
      "dependsOn": [
        "[parameters('actionGroupName')]"
      ],
      "properties": {
        "enabled": true,
        "scopes": [
          "[subscription().id]"
        ],
                "condition": {
                    "allOf": [
                        {
                            "field": "category",
                            "equals": "ServiceHealth"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "properties.incidentType",
                                    "equals": "[parameters('eventType')]"
                                }
                            ]
                        }
                    ]
                },
        "actions": {
          "actionGroups": [
            {
              "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
            }
          ]
        }
      }
    }
  ]
}